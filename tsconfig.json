{
	"compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "components/*": ["./src/components/*"],
      "store/*": ["./src/store/*"],
      "api/*": ["./src/api/*"],
      "images/*": ["./src/assets/images/*"],
    }
	},
	"include": [
    "./src/*"
	]
}